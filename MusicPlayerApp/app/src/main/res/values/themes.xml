<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MusicPlayerApp" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/primary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowBackground">@drawable/dark_background</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/primary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="splashTheme" parent="Theme.MaterialComponents.NoActionBar">
    <item name="android:colorPrimary">@color/purple_500</item>
    <item name="android:colorPrimary">@color/purple_700</item>
    <item name="android:colorPrimary">@color/black</item>
    <!-- Secondary brand color. -->
        <item name="android:colorSecondary">@color/teal_200</item>
        <item name="android:colorSecondary">@color/teal_200</item>
    <item name="colorOnSecondary">@color/black</item>
    <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#000000</item>
    </style>
    <style name="ButtonGradient" parent="TextAppearance.AppCompat.Button">
        <item name="colorPrimary">@null</item>
        <item name="colorPrimaryVariant">@null</item>
    </style>
</resources>